#include <stdio.h>

int main() {
    int size, e = 0, o = 0;
    printf("Enter the size of the array: ");
    scanf("%d", &size);
    int arr[size];
    printf("Enter the elements:\n");
    for (int i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
         if (arr[i] % 2 == 0) {
            e++;
        } else {
            o++;
        }
    }
    printf("Number of even elements: %d\n", e);
    printf("Number of odd elements: %d\n", o);
    return 0;
}
